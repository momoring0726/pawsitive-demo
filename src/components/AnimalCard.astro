---
// src/components/AnimalCard.astro
const { pet } = Astro.props;
---

<a href={`/pets/${pet.slug}`} class="group block overflow-hidden rounded-lg border shadow-lg transition hover:shadow-2xl">
  <img 
    src={pet.images[0]} 
    alt={`Photo of ${pet.name}`}
    class="h-64 w-full object-cover transition-transform group-hover:scale-105"
  />
  <div class="p-4">
    <h3 class="text-2xl font-semibold text-blue-700">{pet.name}</h3>
    <p class="text-gray-600">{pet.breed}</p>
    <p class="mt-1 text-sm text-gray-500">{pet.age} | {pet.gender}</p>
  </div>
</a>